<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_manage_tags"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.activeagenda.ManageTagsActivity"
    tools:showIn="@layout/activity_manage_tags">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manage_tags_cur_tags_text"
        android:text="Current Tags"
        android:textSize="36dp"
        android:layout_weight="0.8"
        android:gravity="center"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manage_tags_lv"
        android:layout_below="@+id/manage_tags_cur_tags_text">
    </ListView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manage_tags_delete_all_tags_btn"
        android:text="DELETE ALL TAGS"
        android:layout_gravity="center"
        android:layout_below="@id/manage_tags_lv"/>

</RelativeLayout>
